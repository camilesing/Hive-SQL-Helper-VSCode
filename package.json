{
    "name": "hive-sql-helper",
    "version": "1.0.0",
    "displayName": "Hive SQL Helper",
    "description": "Help you efficiently and focus on Hive SQL development. support Hive SQL error grammar check, syntax highlighting, complete keywords, rename, find all references and code format, including user-defined functions.",
    "publisher": "CamileSing",
    "author": {
        "name": "CamileSing",
        "email": "CamileSing@gmail.com"
    },
    "license": "MIT",
    "icon": "icons/Apache_Hive_logo.png",
    "engines": {
        "vscode": "^1.20.0"
    },
    "galleryBanner": {
        "color": "#F2C45A",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/camilesing/Hive-SQL-Helper-VSCode"
    },
    "homepage": "https://github.com/camilesing/Hive-SQL-Helper-VSCode/main/README.md",
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "Hive SQL", "HQL"
    ],
    "preview": false,
    "contributes": {
        "configuration": {
            "title": "Error grammar Check Settings",
            "properties": {
              "hive-sql-grammar-check.enable": {
                "type": "boolean",
                "default": false,
                "description": "Enable hive sql grammar check."
              }
            }
        },
        "languages": [{
            "id": "hive-sql",
            "aliases": ["HiveSQL", "hive-sql", "HQL"],
            "extensions": [".sql", ".hql"],
            "configuration": "./language-configuration.json",
            "icon": {
                "light": "./icons/Apache_Hive_logo.png",
                "dark": "./icons/Apache_Hive_logo.png"
            }
        }],
        "grammars": [{
            "language": "hive-sql",
            "scopeName": "source.hive",
            "path": "./syntaxes/hive.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "hive-sql",
                "path": "./snippets/hive-sql.json"
            }
        ],
        "capabilities" : {
            "renameProvider" : "true",
            "referencesProvider" : "true"
        }
    },
    "activationEvents": [
        "onLanguage:hql"
    ],
    "scripts": {
        "antlr4ts": "antlr4ts -visitor gen/HiveSQL.g4",
        "vscode:prepublish": "webpack --mode production",
        "compile": "webpack --mode none",
        "watch": "webpack --mode none --watch",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "main": "./out/extension.js",
    "browser": "./out/extension.js",
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.20.0",
        "@typescript-eslint/eslint-plugin": "^5.59.1",
        "@typescript-eslint/parser": "^5.59.1",
        "@vscode/test-electron": "^2.3.0",
        "antlr4ts": "^0.5.0-alpha.4",
        "antlr4ts-cli": "^0.5.0-alpha.4",
        "eslint": "^8.39.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "ts-loader": "^9.4.3",
        "typescript": "^5.0.4",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.4"
    }
}